<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlantCreation">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorMain"
                android:rotation="270"
                app:srcCompat="@drawable/ic_group_expand_15" />

            <TextView
                android:id="@+id/appBarTV"
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center_horizontal|left|center_vertical"
                android:text="@string/plant_creation_bar"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/colorMain"
                app:srcCompat="@drawable/ic_checked_checkbox" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Мое растение"
                    android:textColor="@color/darkGreen" />

                <ImageButton
                    android:id="@+id/checkName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    app:srcCompat="@android:drawable/ic_menu_search" />
            </LinearLayout>

            <TextView
                android:id="@+id/tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/wateringCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:buttonTint="@color/blue"
                    android:checked="true"
                    android:text="@string/water"
                    android:textColor="#0F427A"
                    android:textColorLink="@color/blue" />


                <TextView
                    android:id="@+id/wateringInf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="---"
                    android:textColor="@color/blue"
                    android:textSize="24sp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/wateringSB"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="13"
                android:indeterminate="false"
                android:max="30"
                android:progress="3"
                android:progressTint="@color/blue"
                android:thumbTint="@color/blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/feedingCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:buttonTint="@color/yellow"
                    android:checked="true"
                    android:text="@string/feed"
                    android:textColor="#633F01"
                    android:textColorLink="@color/yellow" />

                <TextView
                    android:id="@+id/feedingInf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="---"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />


            </LinearLayout>

            <SeekBar
                android:id="@+id/feedingSB"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="15"
                android:indeterminate="false"
                android:max="30"
                android:progress="3"
                android:progressTint="@color/yellow"
                android:thumbTint="@color/yellow"></SeekBar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/sprayingCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:buttonTint="@color/colorMain"
                    android:checked="true"
                    android:text="@string/spray"
                    android:textColor="#124D09"
                    android:textColorLink="@color/colorMain" />


                <TextView
                    android:id="@+id/sprayingInf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="---"
                    android:textColor="@color/colorMain"
                    android:textSize="24sp" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/sprayingSB"
                style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="15"
                android:indeterminate="false"
                android:max="30"
                android:progress="3"
                android:progressTint="@color/colorMain"
                android:thumbTint="@color/colorMain"></SeekBar>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/notes"
                    android:textColorHighlight="@color/colorMain"
                    android:textColorLink="@color/colorMain" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>